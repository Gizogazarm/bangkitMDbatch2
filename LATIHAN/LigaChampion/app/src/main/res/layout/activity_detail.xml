<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageViewBola"
            android:layout_width="178dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/title_about"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_klub_bola"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_bola"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/acme"
            android:maxLines="15"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_pemain_bola"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/title_pemain_bola"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pic_pemain_bola"
            android:layout_width="178dp"
            android:layout_height="194dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/title_about"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nama_pemain_bola"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:textSize="30sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>